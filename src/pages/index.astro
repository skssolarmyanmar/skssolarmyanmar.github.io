---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

		<style>
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  line-height: 1.6;
  margin: 0;
  padding: 0; 
  width: 100%;
  color: #333;
  background-color: #f4fdf8;
}

main {
  max-width: 100%;
  margin: auto;
  padding: 2rem;
}

h1, h2, h3 {
  color: #006441;
  margin-top: 2rem;
  font-weight: 600;
  text-align: center;
}

section {
  margin-bottom: 3rem;
}

ul {
  padding-left: 1.5rem;
}

li {
  margin-bottom: 0.5rem;
}

ul img {
  max-width: 100%;
  height: auto;
  margin: 0.5rem;
}

a {
  color: #006441;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

address {
  font-style: normal;
  background: #e6f4ed;
  padding: 1rem;
  border-left: 5px solid #006441;
  margin-top: 1rem;
}

.contact-images {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 1rem;
  justify-content: center;
}

.contact-images img {
  max-width: 180px;
  width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* Mission, Vision & Values Cards */
.mv-container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  justify-content: center;
  margin-top: 1.5rem;
}

.mv-card {
  background: #f4fdf8;
  border-left: 5px solid #006441;
  border-radius: 12px;
  padding: 1.5rem;
  width: 100%;
  /* max-width: 280px; */
  /* min-width: 250px; */
  transition: transform 0.3s ease;
  box-shadow: 0 2px 6px rgba(0, 100, 65, 0.1);
}

.mv-card:hover {
  transform: translateY(-4px);
}

.mv-card h3 {
  color: #006441;
  margin-bottom: 0.75rem;
  text-align: left;
}

.mv-card p,
.mv-card ul {
  margin: 0;
  font-size: 0.95rem;
  color: #444;
}

.mv-card ul {
  padding-left: 1.2rem;
}

.mv-card li {
  margin-bottom: 0.5rem;
}

/* Partners Horizontal Scroll */
.partners-container {
  overflow: hidden;
  white-space: nowrap;
  position: relative;
  margin: 1rem 0;
}

.partners-track {
  display: inline-block;
  animation: scroll 30s linear infinite;
}

.partners-track img {
  height: 60px;
  margin: 0 2rem;
  vertical-align: middle;
}

/* Team */
.team {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
  padding: 1rem 0;
  justify-items: center;
}

.team-card {
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 10px rgba(0, 100, 65, 0.08);
  padding: 1.5rem;
  width: 100%;
  max-width: 260px;
  text-align: center;
  transition: transform 0.3s ease;
}

.team-card:hover {
  transform: translateY(-5px);
}

.team-card img {
  width: 100%;
  height: auto;
  max-height: 240px;
  object-fit: cover;
  border-radius: 12px;
  margin-bottom: 1rem;
}

.team-card p {
  margin: 0;
}

.team-card strong {
  display: block;
  font-size: 1.1rem;
  color: #222;
  margin-bottom: 0.25rem;
}

.team-card span {
  font-size: 0.95rem;
  color: #555;
}

/* Keyframes */
@keyframes scroll {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-100%);
  }
}

/* Mobile Styles */
@media (max-width: 768px) {
  main {
    padding: 1rem;
  }
  
  h1 {
    font-size: 1.8rem;
    margin-top: 1rem;
  }
  
  h2 {
    font-size: 1.5rem;
  }
  
  h3 {
    font-size: 1.3rem;
  }
  
  section {
    margin-bottom: 2rem;
  }
  
  .mv-container {
    gap: 1rem;
  }
  
  .mv-card {
    min-width: 100%;
    padding: 1rem;
  }
  
  .team {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .team-card {
    max-width: 100%;
  }
  
  .contact-images {
    gap: 0.5rem;
  }
  
  .contact-images img {
    max-width: calc(50% - 0.25rem);
    min-width: 120px;
  }
  
  .partners-track img {
    height: 45px;
    margin: 0 1rem;
  }
  
  address {
    padding: 0.75rem;
    font-size: 0.9rem;
  }
}

/* Small Mobile Styles */
@media (max-width: 480px) {
  main {
    padding: 0.75rem;
  }
  
  h1 {
    font-size: 1.6rem;
  }
  
  h2 {
    font-size: 1.4rem;
  }
  
  h3 {
    font-size: 1.2rem;
  }
  
  .mv-card {
    padding: 0.75rem;
  }
  
  .team-card {
    padding: 1rem;
  }
  
  .contact-images img {
    max-width: 100%;
  }
  
  .partners-track img {
    height: 40px;
    margin: 0 0.75rem;
  }
  
  ul {
    padding-left: 1rem;
  }
}

/* Tablet Styles */
@media (min-width: 769px) and (max-width: 1024px) {
  main {
    padding: 1.5rem;
  }
  
  .mv-container {
    gap: 1.5rem;
  }
  
  .team {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  .contact-images img {
    max-width: 150px;
  }
}

/* Large Desktop Styles */
@media (min-width: 1200px) {
  main {
    padding: 2.5rem;
  }
  
  .team {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .mv-container {
    gap: 2.5rem;
  }
}

/* Accessibility and Touch Improvements */
@media (hover: none) and (pointer: coarse) {
  .mv-card:hover,
  .team-card:hover {
    transform: none;
  }
  
  .mv-card,
  .team-card {
    transition: none;
  }
}

/* Print Styles */
@media print {
  body {
    background-color: white;
  }
  
  .partners-container {
    overflow: visible;
  }
  
  .partners-track {
    animation: none;
  }
  
  .mv-card,
  .team-card {
    box-shadow: none;
    border: 1px solid #ccc;
  }
}

.core-business-grid {
