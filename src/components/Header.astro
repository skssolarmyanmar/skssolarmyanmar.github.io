---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<!-- <nav> -->
		<!-- <div class="social-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="#contact">Contact</HeaderLink>
		</div> -->
	<!-- </nav> -->
	<h2>
		<a href="/">
			<img src="/SKS Logo.jpg" alt="logo">
		</a>
	</h2>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		text-align: center;
	}

	img {
		height: 5rem;
		width: 5rem;
		border-radius: 50%;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
